<%# HTML page for displaying all the available problems %>
<h2>Interview Problems</h2>
<div class="row">
    <div class="col-sm-3">
    	<h3>Categories</h3>
            <%= link_to @default_category.name, category_path(@default_category), :class => 'list-group-item default active', :remote => true %>
          
            <% @categories.each do |category| %>
                
                <%= link_to category.name, category_path(category), :class => 'list-group-item', :remote => true %>
              
            <% end %>
    </div>

    <div id = "problems-listing" class="col-sm-8">
    </div>
</div>