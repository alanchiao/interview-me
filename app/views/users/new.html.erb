<%# HTML page for user sign up%>
<div id="registration-form" class="row">
<div id="form-content" class="col-sm-4 col-sm-offset-4">
  <h3>Register</h3>

  <%= form_for(@user, html:{class: "form-horizontal"}) do |f| %>

  <div class="form-group field">
    <% if @user.errors[:username].any? %>
      <%= f.text_field :username, :class => "col-sm-12 input-rounded taller error", :placeholder => "Username" %>
      <% @user.errors.full_messages_for(:username).each do |msg| %>
        <p class="error-msg"><%= msg %></p>
      <% end %>
    <% else %>
      <%= f.text_field :username, :class => "col-sm-12 input-rounded taller", :placeholder => "Username" %>
    <% end %>
  </div>

  <div class="form-group field">
    <% if @user.errors[:first_name].any? %>
      <%= f.text_field :first_name, :class => "col-sm-12 input-rounded taller error", :placeholder => "First name" %>
      <% @user.errors.full_messages_for(:first_name).each do |msg| %>
        <p class="error-msg"><%= msg %></p>
      <% end %>
    <% else %>
      <%= f.text_field :first_name, :class => "col-sm-12 input-rounded taller", :placeholder => "First name" %>
    <% end %>
  </div>

  <div class="form-group field">
    <% if @user.errors[:last_name].any? %>
      <%= f.text_field :last_name, :class => "col-sm-12 input-rounded taller error", :placeholder => "Last name" %>
      <% @user.errors.full_messages_for(:last_name).each do |msg| %>
        <p class="error-msg"><%= msg %></p>
      <% end %>
    <% else%>
      <%= f.text_field :last_name, :class => "col-sm-12 input-rounded taller", :placeholder => "Last name" %>
    <% end %>
  </div>

  <div class="form-group field">
    <% if @user.errors[:password].any? %>
      <%= f.password_field :password, :class => "col-sm-12 input-rounded taller error", :placeholder => "Password" %>
      <% @user.errors.full_messages_for(:password).each do |msg| %>
        <p class="error-msg"><%= msg %></p>
      <% end %>
    <% else %>
      <%= f.password_field :password, :class => "col-sm-12 input-rounded taller", :placeholder => "Password" %>
    <% end %>
  </div>

  <div class="form-group field">
    <% if @user.errors[:password_confirmation].any? %>
      <%= f.password_field :password_confirmation, :class => "col-sm-12 input-rounded taller error", :placeholder => "Confirm Password" %>
      <% @user.errors.full_messages_for(:password_confirmation).each do |msg| %>
        <p class="error-msg"><%= msg %></p>
      <% end %>
    <% else %>
      <%= f.password_field :password_confirmation, :class => "col-sm-12 input-rounded taller", :placeholder => "Confirm Password" %>
    <% end %>
  </div>

  <div class="form-group field">
    <%= f.submit "Sign me up!", :class => "btn btn-primary col-sm-12 taller" %>
  </div>
  <% end %>
</div>
</div>