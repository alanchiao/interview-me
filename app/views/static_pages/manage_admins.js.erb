/**
* Update user permissions page after adding new admins
*/
$(function(){
	<% if flash[:danger] %>
		$("#flashes").html("<div class='alert alert-danger alert-dismissable col-sm-8 col-sm-offset-2'><button type='button' class='close' data-dismiss='alert' aria-hidden='true'>&times;</button><%= flash[:danger] %></div>");
	<% elsif flash[:success] %>
		$("#current-admins").append("<li> <%= @newadmin.username %></li>");
		//remove this user if was previously a content creator
		$("#current-ccs").children().filter(function() {
			return $(this).html().trim() === "<%= @newadmin.username %>";
		}).remove();
		$("#flashes").html("<div class='alert alert-success alert-dismissable col-sm-8 col-sm-offset-2'><button type='button' class='close' data-dismiss='alert' aria-hidden='true'>&times;</button><%= flash[:success] %></div>");
	<% end%>
});